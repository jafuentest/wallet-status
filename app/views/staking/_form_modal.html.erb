<div class="modal" id="staking_form_modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_for position, url: { controller: 'staking', action: position.persisted? ? 'update' : 'create' } do |f| %>
        <div class="modal-header">
          <h5 class="modal-title">Modal title</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div id="staking_alert_container" class="my-2"></div>

          <div class="mb-3">
            <%= f.label :symbol, class: 'form-label' %>
            <%= f.text_field :symbol, class: 'form-control' %>
          </div>
          <div class="mb-3">
            <%= f.label :amount, class: 'form-label' %>
            <%= f.number_field :amount, class: 'form-control' %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
          <%= f.submit class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
